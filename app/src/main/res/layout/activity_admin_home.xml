<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAdmin.AdminHome">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_horizontal" />

            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/logout_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_logout"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/ic_image"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/home_school_name"
        android:layout_width="wrap_content"
        android:text="SMAN 2 Cianjur"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/colorNavi"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:id="@+id/data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="NPSN"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Accreditation"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Address"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/semicolon"
            android:layout_toRightOf="@id/data_name">

            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/semicolon"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/home_npsn"
                android:layout_width="wrap_content"
                android:text="10000001"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/home_accreditation"
                android:layout_width="wrap_content"
                android:text="A"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/home_address"
                android:layout_width="wrap_content"
                android:text="Jl. Arif Rahman Hakim Gg. Pahlawan RT 04/ RW 18 Kelurahan Muka"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:id="@+id/data_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Amount of Class"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Amount of Student"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/semicolon1"
            android:layout_toRightOf="@id/data_name1">

            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/semicolon1">

            <TextView
                android:id="@+id/home_classes"
                android:layout_width="wrap_content"
                android:text="38"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/home_students"
                android:layout_width="wrap_content"
                android:text="45678"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"

        >
        <Button
            android:id="@+id/btn_description"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_description"
            android:paddingLeft="15dp"
            android:background="@drawable/rounded_button"
            />
        <Button
            android:id="@+id/btn_achievment"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Achievment"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_stars"
            android:background="@drawable/rounded_button"
            android:layout_toRightOf="@+id/btn_description"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/btn_facilities"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:text="Facilities"
            android:fontFamily="@font/poppins_semibold"
            android:drawableLeft="@drawable/ic_city"
            android:paddingLeft="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button"
            />
        <Button
            android:id="@+id/btn_extracuricullar"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/btn_facilities"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Extracuricullar"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semibold"
            android:drawableLeft="@drawable/ic_peoples"
            android:background="@drawable/rounded_button"
            android:paddingLeft="15dp"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/student_home_page"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/rounded_button"
        android:text="Go to Home"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>