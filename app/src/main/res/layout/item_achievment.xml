<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingBottom="10dp"
    android:background="@drawable/rounded_list"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >

    <ImageView
        android:id="@+id/img_cover_achievment"
        android:layout_width="112dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_image"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_cover_achievment"
        android:layout_toRightOf="@+id/img_cover_achievment"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textSize="19dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorNavi"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="SMAN 2 CIANJUR"
                android:textSize="19dp"
                android:textColor="@color/colorNavi"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/colorNavi"
                android:textSize="19dp"
                android:paddingRight="5dp"
                />
            <TextView
                android:id="@+id/txt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="PROVINSI JABAR"
                android:textColor="@color/colorNavi"
                android:textSize="19dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>