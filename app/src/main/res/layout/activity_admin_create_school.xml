<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ActivityAdmin.AdminCreateSchool">

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create School"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/text_blueSky"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




    <ImageView
        android:id="@+id/upload_images"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_image"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/btn_upload_images_school"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="10dp"
        />

        </LinearLayout>

    <EditText
        android:id="@+id/nameSchool"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="School name"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"

        />
    <EditText
        android:id="@+id/npsn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="NPSN"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/accreditation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Accreditation"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/students"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Number of Student"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:id="@+id/Class"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/poppins_regular"
        android:hint="Amount of Class"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        />
    <EditText
        android:id="@+id/create_phone"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"

        />

    <EditText
        android:id="@+id/create_radius"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Radius Zonasi (m)"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:id="@+id/latitude"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"

        />
    <EditText
        android:id="@+id/longitude"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/custom_input"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        />
<!--    <fragment-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="250dp"-->
<!--        android:id="@+id/map"-->
<!--        android:name="com.google.android.gms.maps.SupportMapFragment"-->
<!--        />-->
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_picker"
        android:background="@drawable/rounded_button_secondary"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:text="Pick Location School"/>



    <Button
        android:id="@+id/btnCreateSchool"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create School"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"

        />

    </LinearLayout>

</ScrollView>
</LinearLayout>